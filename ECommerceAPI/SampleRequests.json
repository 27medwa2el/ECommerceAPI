{
  "Customer Management API Samples": {
    "1. Create Customer": {
      "method": "POST",
      "url": "/api/customers",
      "body": {
        "name": "John Doe",
        "email": "john.doe@email.com",
        "phone": "+1234567890"
      }
    },
    "2. Create Another Customer": {
      "method": "POST", 
      "url": "/api/customers",
      "body": {
        "name": "Jane Smith",
        "email": "jane.smith@email.com",
        "phone": "+0987654321"
      }
    },
    "3. Get All Customers": {
      "method": "GET",
      "url": "/api/customers"
    },
    "4. Get Customer by ID": {
      "method": "GET",
      "url": "/api/customers/1"
    },
    "5. Create Customer with Invalid Email": {
      "method": "POST",
      "url": "/api/customers",
      "body": {
        "name": "Invalid User",
        "email": "invalid-email",
        "phone": "123456789"
      },
      "expected": "400 Bad Request - Invalid email format"
    },
    "6. Create Customer without Required Fields": {
      "method": "POST",
      "url": "/api/customers", 
      "body": {
        "phone": "123456789"
      },
      "expected": "400 Bad Request - Name and email are required"
    }
  },
  
  "Order Management API Samples": {
    "1. Create Order": {
      "method": "POST",
      "url": "/api/orders",
      "body": {
        "customerId": 1,
        "products": [
          {
            "productId": 1,
            "quantity": 2
          },
          {
            "productId": 3,
            "quantity": 1
          }
        ]
      }
    },
    "2. Create Another Order": {
      "method": "POST",
      "url": "/api/orders",
      "body": {
        "customerId": 2,
        "products": [
          {
            "productId": 2,
            "quantity": 1
          },
          {
            "productId": 4,
            "quantity": 3
          }
        ]
      }
    },
    "3. Get Order by ID": {
      "method": "GET",
      "url": "/api/orders/1"
    },
    "4. Update Order Status to Delivered": {
      "method": "POST",
      "url": "/api/orders/UpdateOrderStatus/1",
      "body": {
        "status": "Delivered"
      }
    },
    "5. Create Order with Invalid Customer": {
      "method": "POST",
      "url": "/api/orders",
      "body": {
        "customerId": 999,
        "products": [
          {
            "productId": 1,
            "quantity": 1
          }
        ]
      },
      "expected": "400 Bad Request - Customer not found"
    },
    "6. Create Order with Invalid Product": {
      "method": "POST",
      "url": "/api/orders",
      "body": {
        "customerId": 1,
        "products": [
          {
            "productId": 999,
            "quantity": 1
          }
        ]
      },
      "expected": "400 Bad Request - Product not found"
    },
    "7. Create Order without Products": {
      "method": "POST",
      "url": "/api/orders",
      "body": {
        "customerId": 1,
        "products": []
      },
      "expected": "400 Bad Request - Order must contain at least one product"
    },
    "8. Update Order Status with Invalid Status": {
      "method": "POST",
      "url": "/api/orders/UpdateOrderStatus/1",
      "body": {
        "status": "InvalidStatus"
      },
      "expected": "400 Bad Request - Status must be either Pending or Delivered"
    }
  },

